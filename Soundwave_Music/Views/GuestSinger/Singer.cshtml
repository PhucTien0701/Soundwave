@using Soundwave_Music.Common.Helper
@using PagedList
@model IPagedList<Soundwave_Music.Models.Singer>
@{
    ViewBag.Title = "Singer";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@section scripts{
    <script src="~/Scripts/my_js/search_singer.js"></script>
}
<div class="mt-20px margin_mobile_fixed">
    <div class="container">
        <div class="row boderproductdetail news_list_section">
            <form action="@Url.Action("SearchSingerResult", "UserSinger")">
                <div class="form-group">
                    <div class="input-group">
                        <input type="search" class="form-control" name="searchsinger" placeholder='Search Singer ...' onfocus="this.placeholder = ''" onblur="this.placeholder = 'Search news ...'">
                        <div class="input-group-append">
                            <button class="btns" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="container">
        <div class="row boderproductdetail news_list_section">
            <!--begin::item newscategory-->
            <h4 style="color:red; text-align:center;"><b>Singers</b></h4>
            @if (Model.Count == 0)
            {
                <span class="h2 text-danger center mt-100px">There is no Singer</span>
            }
            else
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-6 listnewscategory">
                        <div class="blog_section">
                            <a href="@Url.Action("SingerDetail","UserSinger",new {id = item.Singer_id})">
                                <div class="blog_feature_img disable_scale_img"> <img class="img-responsive transition" src="@item.Image" alt="#"> </div>
                                <div class="blog_feature_cantant">
                                    <p class="blog_head d-flex justify-content-center">@item.Singer_name</p>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            }
            <!--end::item newscategory-->
            <!--begin::pagination-->
            <div class="center mt-20px mb-20px">
                @Html.Partial("_Paging", Model)
            </div>
            <!--begin::pagination-->
        </div>
    </div>
</div>
<!-- end content news -->
