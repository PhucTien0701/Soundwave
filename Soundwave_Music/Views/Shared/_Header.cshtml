@using Soundwave_Music.Common.Helper
@using Soundwave_Music.Common

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<script src="~/Scripts/my_js/sticky.compile.js"></script>

<!--begin::Header Bottom-->
<div class="header_bottom fixme">
    <!--begin::Container-->
    <div class="container-fluid" style=" background-color: #12dce1;">
        <!--begin::Container-->
        <div class="container">
            <!--begin::Row-->
            <div class="row">
                <!--begin::Col-->
                <div class="col-lg-4 col-sm-1">
                    <!--begin::Row-->
                    <div class="row">
                        <!--begin::Logo-->
                        <div class="logo col-md-6">
                            <a href="@Url.Action("Index", "Home")"><img src="~/Images/fevicon/Full_Logo.png" class="logo_pc" alt="logo" /></a>
                        </div>
                        <!--end::Logo-->
                    </div>
                    <!--end::Row-->
                </div>
                <!--end::Col-->
                <!--begin::Col-->
                <div class="col-lg-4 col-sm-10">
                    <!--begin::Form-->
                    @if (User.Identity.IsAuthenticated == false)
                    {
                        <form action="#" class="margin_form_search">
                            <div class="searchbox">
                                <div class="searchbox__keyword">
                                    <input type="text" placeholder="Please Sign In Soundwave to search song">
                                    <button class="btn bg-button"><span class="material-icons"> search </span></button>
                                    <div class="ui-autocomplete-loading"></div>
                                </div>
                            </div>
                        </form>
                    }
                    @if (User.Identity.IsAuthenticated == true)
                    {
                        <form action="@Url.Action("SearchSongResult", "UserSong")" class="margin_form_search">
                            <div class="searchbox">
                                <div class="searchbox__keyword">
                                    <input type="text" name="searchsong" id="Song_name" placeholder="Search song...">
                                    <button class="btn bg-button"><span class="material-icons"> search </span></button>
                                    <div class="ui-autocomplete-loading"></div>
                                </div>
                            </div>
                        </form>
                    }
                </div>
                <!--begin::Col-->
                <div class="col-lg-4 col-sm-1">
                    <!--begin::Ul-->
                    <ul class="d-flex float-right list_header_cart" style=" margin: 11px 0 0 0; ">
                        <!--Layout gắn module: Header_Layout-->
                        @if (User.Identity.IsAuthenticated == false)
                        {
                            <!--begin:Li-->
                            <li style="margin-right: 10px;" class="header_right_bottom item_nav_top">
                                <a style=" color: #29324e; " class="d-flex" href="#">
                                    <span class="material-icons">assignment_turned_in</span><div id="elementID">VIP Package</div>
                                </a>
                            </li>
                            <!--end:Li-->
                            <!--begin:Li-->
                            <li style=" margin-right: 10px;" class="dropdown1 item_nav_top">
                                <a class="d-flex" href="@Url.Action("SignIn", "User")">
                                    <span class="material-icons">person</span><div id="elementID">Sign In</div>
                                </a>
                                <ul class="dropdown-content">
                                    <li><a href="@Url.Action("SignUp", "User")">Sign Up</a></li>
                                    <li><a href="@Url.Action("UserForgotPassword", "User")">Forgot Password</a></li>
                                </ul>
                            </li>
                            <!--end:Li-->
                        }                        
                        else
                        {
                            if (User.Identity.GetRole() == 1)
                            {
                                <li style="margin-right: 8px" class="item_nav_top">
                                    <a style=" color: #29324e; " class="d-flex" href="@Url.Action("DashBoard","Admin")">
                                        <span class="material-icons">dashboard</span><div id="elementID"> Administrator</div>
                                    </a>
                                </li>
                            }
                            if (User.Identity.GetRole() == 3)
                            {
                                <li style="margin-right: 8px" class="item_nav_top">
                                    <a style=" color: #29324e; " class="d-flex" href="@Url.Action("DashBoard","Admin")">
                                        <span class="material-icons">playlist_add</span><div id="elementID"> Create Playlist</div>
                                    </a>
                                </li>
                            }
                            else if (User.Identity.GetRole() == 2)
                            {
                                <!--begin:Li-->
                                <li style="margin-right: 8px" class="item_nav_top dropdown1">
                                    <a style=" color: #29324e; " class="d-flex" href="#">
                                        <span class="material-icons">assignment_turned_in</span><div id="elementID">VIP Package</div>
                                    </a>
                                    <div class="dropdown-content">
                                        <div>
                                            <img style="object-fit: contain; width: 100%;" src="~/Images/ImagesImagesCollection/momocode.jpg" />
                                        </div>
                                        <div style="text-align: center">
                                            <button onclick="alert('Cảm ơn bạn đã thanh toán, vui lòng đợi admin duyệt và liên hệ lại sau')" >OK</button>
                                        </div>
                                    </div>
                                </li>
                                <!--end:Li-->
                            }
                            <!--begin:Li-->
                            <li class="dropdown1 item_nav_top" style=" margin-right: 10px; ">
                                <a style=" color: #29324e; " class="d-flex" href="@Url.Action("UserViewDetails", "User")">
                                    <span class="material-icons">person</span><div id="elementID">@User.Identity.GetName()</div>
                                </a>
                                <ul class="dropdown-content">
                                    <li><a href="@Url.Action("UserViewDetails", "User")">User Information</a></li>
                                    <li><a href="@Url.Action("UserEditProfile", "User")">User Edit Profile</a></li>
                                    <li><a href="@Url.Action("UserChangePassword", "User")">Change Password</a></li>
                                    <li><a href="#">Order</a></li>
                                    <li><a class="d-flex" href="@Url.Action("Logout", "User")"><span class="material-icons">logout</span><div id="margin-account">LOGOUT</div></a></li>
                                </ul>
                            </li>
                            <!--end:Li-->
                        }
                        <!-- end module: đăng nhập -->
                        <!--begin:Li-->
                        <li>
                            <!--begin::Cart-->
                            <div class="header__cart ">
                                <!--begin::Button-->
                                <a href="#" id="goToCart">
                                    <span class="material-icons text-white cart_icon">shopping_cart</span>
                                </a>
                                <!--end::Button-->
                            </div>
                            <!--end::Cart-->
                        </li>
                        <!--end:Li-->
                    </ul>
                    <!--end::Ul-->
                </div>
                <!--end::Col-->
            </div>
            <!--begin::Row-->
        </div>
        <!--end::Container-->
        <!--begin:Nav List-->
        <div class="color_bottom_menu">
            <!--begin::Container-->
            <div class="container">
                <!--begin::Row-->
                <div class="row">
                    <!--begin::Menu side-->
                    <div class="menu_side">
                        <!--begin::Nav-->
                        <nav id="navbar_menu">
                            <ul class="first-ul font_family_ChakraPetch-semibold">
                                @if (User.Identity.IsAuthenticated == false)
                                {
                                    <li>
                                        <a class="d-flex" href="@Url.Action("SongIndex", "GuestSong")">
                                            <span class="material-icons fa fa-music"></span><div id="elementID">&nbsp;Song</div><span class="material-icons dropdown--menu-arrow">arrow_drop_down</span>
                                        </a>
                                        <ul>
                                            @Html.Action("ListArea", "GuestSong")
                                        </ul>
                                    </li>

                                    <!-- start module: Album -->
                                    <li>
                                        <a class="d-flex" href="@Url.Action("AlbumIndex", "GuestAlbum")">
                                            <span class="material-icons fa-play-circle"></span><div id="elementID">&nbsp;Album</div><span class="material-icons dropdown--menu-arrow">arrow_drop_down</span>
                                        </a>
                                        <ul>
                                            @Html.Action("ListArea", "GuestAlbum")
                                        </ul>
                                    </li>
                                    <!--end::Li-->

                                    <!-- start module: Video -->
                                    <li>
                                        <a class="d-flex" href="@Url.Action("VideoIndex", "GuestVideo")">
                                            <span class="material-icons fa fa-film"></span><div id="elementID">&nbsp;Music Video</div><span class="material-icons dropdown--menu-arrow">arrow_drop_down</span>
                                        </a>
                                        <ul>
                                            @Html.Action("ListArea", "GuestVideo")
                                            list video
                                        </ul>
                                    </li>
                                    <!--end::Li-->

                                    <!-- start module: Singers -->
                                    <li>
                                        <a class="d-flex" href="@Url.Action("ListAllSinger", "GuestSinger")">
                                            <span class="material-icons fa fa-microphone"></span><div id="elementID">&nbsp;Singer</div>
                                        </a>
                                    </li>
                                    <!--end::Li-->

                                    <!-- start module: News -->
                                    <li>
                                        <a class="d-flex" href="@Url.Action("ListAllNews", "NewsHome")">
                                            &ensp;<span class="material-icons fa fa-newspaper-o"></span><div id="elementID">&nbsp;News</div>
                                        </a>
                                    </li>
                                    <!--end::Li-->
                                }
                                else
                                {
                                    <!-- start module: Song -->
                                    <li>
                                        <a class="d-flex" href="@Url.Action("SongIndex", "UserSong")">
                                            <span class="material-icons fa fa-music"></span><div id="elementID">&nbsp;Song</div><span class="material-icons dropdown--menu-arrow">arrow_drop_down</span>
                                        </a>
                                        <ul>
                                            @Html.Action("ListArea", "UserSong")
                                        </ul>
                                    </li>
                                    <!--end::Li-->

                                    <!-- start module: Album -->
                                    <li>
                                        <a class="d-flex" href="@Url.Action("AlbumIndex", "UserAlbum")">
                                            <span class="material-icons fa-play-circle"></span><div id="elementID">&nbsp;Album</div><span class="material-icons dropdown--menu-arrow">arrow_drop_down</span>
                                        </a>
                                        <ul>
                                            @Html.Action("ListArea", "UserAlbum")
                                        </ul>
                                    </li>
                                    <!--end::Li-->

                                    <!-- start module: Video -->
                                    <li>
                                        <a class="d-flex" href="@Url.Action("VideoIndex", "UserVideo")">
                                            <span class="material-icons fa fa-film"></span><div id="elementID">&nbsp;Music Video</div><span class="material-icons dropdown--menu-arrow">arrow_drop_down</span>
                                        </a>
                                        <ul>
                                            @Html.Action("ListArea", "UserVideo")
                                            list video
                                        </ul>
                                    </li>
                                    <!--end::Li-->

                                    <!-- start module: Singers -->
                                    <li>
                                        <a class="d-flex" href="@Url.Action("ListAllSinger", "UserSinger")">
                                            <span class="material-icons fa fa-microphone"></span><div id="elementID">&nbsp;Singer</div>
                                        </a>
                                    </li>
                                    <!--end::Li-->

                                    <!-- start module: Playlist -->
                                    <li>
                                        <a class="d-flex" href="@Url.Action("PlaylistIndex", "MyPlaylist")">
                                            &ensp;<span class="material-icons fa fa-list"></span><div id="elementID">&nbsp;Playlist</div>
                                        </a>
                                    </li>
                                    <!--end::Li-->

                                    <!-- start module: News -->
                                    <li>
                                        <a class="d-flex" href="@Url.Action("ListAllNews", "NewsHome")">
                                            &ensp;<span class="material-icons fa fa-newspaper-o"></span><div id="elementID">&nbsp;News</div>
                                        </a>
                                    </li>
                                    <!--end::Li-->
                                }

                            </ul>
                            <!--end::Ul-->
                        </nav>
                        <!--end::Nav-->
                    </div>
                    <!--end::Menu side-->
                </div>
                <!--end::Container-->
            </div>
            <!--end::Row-->
        </div>
        <!--end:Nav List-->
    </div>
    <!--end::Container-->
</div>