@model Soundwave_Music.Models.UserManagementModels.Sign_Up
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@section scripts{
    <!--show password-->
    <script src="~/Scripts/my_js/show_hide_password.js"></script>
    <script src="~/Scripts/my_js/loader_email.js"></script>
}
<div class="loader loader-double"></div>
@using (Html.BeginForm("SignUp", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <!--begin::Section-->
    <section class="margin_register">
        <!--begin::Container-->
        <div class="container margin_mobile_fixed">
            <!--begin::Row-->
            <div class="row justify-content-sm-center h-100">
                <!--begin::Col-->
                <div class="col-lg-5 col-xl-4 col-md-6 col-12">
                    <!--begin::Card-->
                    <div class="boder_account" style="background-color:yellow">
                        <!--begin::Card Body-->
                        <div class="card-body">
                            <p class="card-title h4 mb-2 center text-uppercase font_roboto_medium">SIGN UP</p>
                            <!--begin:Message-->
                            <div class="text-success mb-1">
                                <!--ViewBag.Success và ViewBag.Fail | path: Action"Register" - controller"Account-->
                                @ViewBag.Success
                            </div>
                            <div class="text-danger mb-1">
                                @ViewBag.Fail
                            </div>
                            <!--end:Message-->
                            <!--begin::Form-->
                            <form>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <!--begin::input form full name-->
                                <div class="form-group mb-2">
                                    <!-- check validdation xem ở Models/Account.cs-->
                                    <label class="text-muted" for="password">User Full Name</label>
                                    @Html.EditorFor(model => model.Full_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input full name" } })
                                    @Html.ValidationMessageFor(model => model.Full_name, "", new { @class = "text-danger" })
                                </div>
                                <!--end::input form full name-->
                                <!--begin::input form group email-->
                                <div class="form-group mb-2">
                                    <label class="text-muted" for="password">Email</label>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input email" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                <!--end::input form group email-->
                                <!--begin::input form group password-->
                                <label class="text-muted" for="password">Password</label>
                                <div class="form-group show_pass mb-2 position-relative">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-lg-1", @placeholder = "Input password", id = "password", type = "password" } })
                                    <span toggle="#password" class="col-lg-1 d-flex justify-content-end field-icon toggle-password"><span class="material-icons">visibility</span></span>
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                                <!--end: input form group password-->
                                <!--begin::input form group password-->
                                <label class="text-muted" for="password">Confirm Password</label>
                                <div class="form-group show_pass mb-2 position-relative">
                                    @Html.EditorFor(model => model.Confirm_password, new { htmlAttributes = new { @class = "form-control col-lg-1", @placeholder = "Input password again" , @required = "required", id = "Confirmpass" } })
                                    @Html.ValidationMessageFor(model => model.Confirm_password, "", new { @class = "text-danger" })
                                    <span toggle="#Confirmpass" class="col-lg-1 d-flex justify-content-end field-icon toggle-password"><span class="material-icons">visibility</span></span>
                                </div>
                                <!--end: input form group password-->
                                <!--begin::input form group phone number-->
                                <div class="form-group mb-2">
                                    <label class="text-muted" for="password">Phone Number</label>
                                    @Html.EditorFor(model => model.Phone_number, new { htmlAttributes = new { @class = "form-control", @placeholder = "Input phone number" } })
                                    @Html.ValidationMessageFor(model => model.Phone_number, "", new { @class = "text-danger" })
                                </div>
                                <!--end::input form group address-->
                                <div class="w-100 ">
                                    <div class="mb-2 text-muted">You are agree with <a href="#" class=" font_roboto_bold">Terms and Condition </a>of Soundwave</div>
                                </div>
                            </form>
                            <!--end::Form-->
                            <!--begin::Button-->
                            <div class="form-group mb-2">
                                <button class="btn bg-button w-100" id="btn_register" tabindex="7" type="submit">SIGN UP</button>
                            </div>
                            <!--end::Buttont-->
                        </div>
                        <!--end::Card Body-->
                        <!--begin::Action-->
                        <div class="card-footer py-3 border-0">
                            <div class="text-center">
                                Have you already got an account?
                                <!--begin::Button-->
                                <a href="@Url.Action("SignIn", "User")" class="font_roboto_bold">SIGN UP</a>
                                <!--end::Button-->
                            </div>
                        </div>
                        <!--end::Action-->
                    </div>
                    <!--end::Card-->
                </div>
                <!--end::Col-->
            </div>
            <!--end::Row-->
        </div>
        <!--end::Container-->
    </section>
    <!--end::Section-->
}