@using PagedList
@model IPagedList<Soundwave_Music.Models.Genre>
@{
    ViewBag.Title = "Genre - " + ViewBag.AreaName;
    ViewBag.Tag = "Album Genre";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="mt-20px margin_mobile_fixed">
    <div class="container">
        <div class="row boderproductdetail news_list_section">
            <div class="news-img-head">
                <img src="@ViewBag.AreaImage" class="img_Newscategory" />
                <span class="font_roboto_medium_italic">@ViewBag.AreaName</span>
            </div>
            <!--begin::item newscategory-->
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-6 listnewscategory">
                    <div class="blog_section">
                        <a href="@Url.Action("Album","UserAlbum",new {id = item.Genre_id})">
                            <div class="blog_feature_img disable_scale_img"> <img class="img-responsive transition" src="@item.Image" alt="#"> </div>
                            <div class="blog_feature_cantant">
                                <p class="blog_head d-flex justify-content-center">@item.Genre_name</p>
                            </div>
                        </a>
                    </div>
                </div>
            }
            <!--end::item newscategory-->
            <!--begin::pagination-->
            <div class="center mt-20px mb-20px">
                @Html.Partial("_Paging", Model)
            </div>
            <!--begin::pagination-->
        </div>
    </div>
</div>
<!-- end content news -->