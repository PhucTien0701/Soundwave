@model IEnumerable<Soundwave_Music.Models.Area>
@foreach (var item in Model)
{
    <li>
        <a href="@Url.Action("Genre", "UserAlbum", new {id = item.Area_id})">@item.Area_name</a>
        <a href="@Url.Action("ListAllAlbum", "UserAlbum")">List All Albums</a>
        <a href="@Url.Action("TopAlbum", "UserAlbum")">Top Hit Album</a>
        <a href="@Url.Action("TopLovedAlbum", "UserAlbum")">Top Loved Album</a>
        <a href="@Url.Action("HotAlbum", "UserAlbum")">Top Hot Album</a>
    </li>
}